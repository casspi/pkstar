{
  "name": "@pkstar/vue-use",
  "version": "0.0.1",
  "description": "vue-use vue3 hooks",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "gen": "plop --plopfile ./scripts/gen.js --force",
    "del": "plop --plopfile ./scripts/del.js --force",
    "entry": "plop --plopfile ./scripts/entry.js --force",
    "clean:es": "rimraf ./es",
    "clean:lib": "rimraf ./lib",
    "clean": "npm run clean:es && npm run clean:lib",
    "build:es": "npm run clean:es && tsc -p ./tsconfig-esm.json",
    "build:lib": "npm run clean:lib && tsc -p ./tsconfig.json",
    "build": "npm run build:es && npm run build:lib",
    "format": "prettier --write src/",
    "release": "npm run build && dsc publish --pnpm -t && dsc sync"
  },
  "publishConfig": {
    "main": "lib/index.js",
    "module": "es/index.js",
    "types": "es/index.d.ts",
    "exports": {
      ".": {
        "types": "./es/index.d.ts",
        "import": "./es/index.js",
        "require": "./lib/index.js"
      },
      "./*": "./*"
    },
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "vue",
    "vue3",
    "use",
    "vue-use"
  ],
  "author": "kassadin <369642339@qq.com>",
  "license": "MIT",
  "devDependencies": {
    "plop": "^4.0.1",
    "rimraf": "^6.0.1",
    "node-dir": "^0.1.17"
  },
  "dependencies": {
    "vue": ">=3.4.29",
    "vue-router": ">=4.3.3"
  }
}