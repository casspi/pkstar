{
  "name": "pkstar",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -C ./playground dev",
    "dev:define-sass": "pnpm -C ./packages/define-sass dev",
    "clean": "rimraf --glob **/node_modules",
    "vue-use:gen": "pnpm -C ./packages/vue-use gen",
    "vue-use:del": "pnpm -C ./packages/vue-use del",
    "utils:gen": "pnpm -C ./packages/utils gen",
    "utils:del": "pnpm -C ./packages/utils del",
    "utils:entry": "pnpm -C ./packages/utils entry",
    "format": "npm run format:vue-use",
    "format:vue-use": "pnpm -C ./packages/vue-use format",
    "test:utils": "pnpm -C ./packages/utils test",
    "build": "npm run build:vue-use && npm run build:utils",
    "build:vue-use": "pnpm -C ./packages/vue-use build",
    "build:utils": "pnpm -C ./packages/utils build",
    "build:banana": "pnpm -C ./packages/banana build:tsc",
    "jssdk:build": "pnpm -C ./packages/horn-jssdk build",
    "jssdk:release": "pnpm -C ./packages/horn-jssdk release",
    "jssdk:sync": "pnpm -C ./packages/horn-jssdk sync",
    "release": "npm run jssdk:release && npm run use:release && npm run ui:release",
    "sync": "npm run ui:sync && npm run use:sync && npm run jssdk:sync",
    "release:vue-use": "pnpm -C ./packages/vue-use release",
    "release:utils": "pnpm -C ./packages/utils release"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  }
}